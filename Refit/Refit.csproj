<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;netstandard1.3;net45;portable-win81+wpa81;wp8</TargetFrameworks>    
    <IncludeSymbols>true</IncludeSymbols>
    <GenerateDocumentationFile Condition=" '$(Configuration)' == 'Release' ">true</GenerateDocumentationFile>
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup>    
    <PackageReference Include="MSBuild.Sdk.Extras" Version="1.0.2" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
    <PackageReference Condition="'$(TargetFramework)' != 'wp8' and '$(TargetFramework)' != 'net45' " Include="System.Net.Http" Version="4.3.2" />
    <Compile Remove="Features\**\*.*" />
    <None Include="Features\**\*.*" />

    <Compile Condition="'$(TargetFramework)' == 'netstandard1.1'" Remove="RequestBuilderImplementation.cs" />
    <None Include="RequestBuilderImplementation.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="1.1.2" />
    <PackageReference Include="System.Text.Encodings.Web" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'portable-win81+wpa81'">
    <Compile Include="Features\HttpUtilityFull\*.cs" />
  </ItemGroup>


  <ItemGroup Condition="'$(TargetFramework)' == 'wp8'">
    <PackageReference Include="Microsoft.Net.Http" Version="2.2.29" />
    <PackageReference Include="Microsoft.Bcl.Build" Version="1.0.21" />
    <Compile Include="Features\HttpUtilityFull\*.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <Compile Include="Features\HttpUtility.NetStandard.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <Reference Include="System.Web" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>
  
  
  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>
