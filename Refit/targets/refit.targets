<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="GenerateRefitStubs"> 
    <PropertyGroup Condition="'$(OS)' == 'Windows_NT'">
      <RefitExecCmd>"$(MSBuildThisFileDirectory)..\..\tools\InterfaceStubGenerator.exe" "$(ProjectDir)$(IntermediateOutputPath)\RefitStubs.g.cs" "$(ProjectDir)$(ProjectFileName)" "@(Compile)"</RefitExecCmd>
    </PropertyGroup>

    <PropertyGroup Condition="'$(OS)' != 'Windows_NT'">
      <RefitExecCmd>mono "$(MSBuildThisFileDirectory)../../tools/InterfaceStubGenerator.exe" "$(ProjectDir)$(IntermediateOutputPath)\RefitStubs.g.cs" "$(ProjectDir)$(ProjectFileName)" "@(Compile)"</RefitExecCmd>
    </PropertyGroup>
    
    <Exec Command="$(RefitExecCmd)" />
    <Message Text="Processed Refit Stubs" />   
   
  </Target>
  
   <ItemGroup Condition="Exists('$(ProjectDir)$(IntermediateOutputPath)\RefitStubs.g.cs')">
      <Compile Include="$(ProjectDir)$(IntermediateOutputPath)\RefitStubs.g.cs" />
    </ItemGroup>
    
    <!--The following property group adds our custom pre-target to CoreCompileDependsOn to ensure it is called before CoreCompile -->
    <PropertyGroup>
      <CoreCompileDependsOn>
          $(CoreCompileDependsOn);
          GenerateRefitStubs
      </CoreCompileDependsOn>
    </PropertyGroup>
</Project>
